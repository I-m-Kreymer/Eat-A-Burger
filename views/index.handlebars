<div class = "container">
	<div class = "row">
		<div class="col-xs-12 text-center" id="top-bar">
			<h1>EAT-A-BURGER</h1>
		</div>
		<div class="task">
			<div class="row">
				{{#each burger_data}}
					{{#unless this.devoured}}
				<div>
					<pre>{{this.id}} {{this.burger_name}}</pre>
				</div>
				<div>
					<form method="POST" action="/burgers/update?_method=PUT" clas="button-size">
						<input type="hidden" name="burger_id" type="text" value={{this.id}}>
						<br>
						<button type="submit" class="btn brn-default">Eat It</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div>

		<h1>Eaten Burgers</h1>
			{{#each burger_data}}
				{{#if this.devoured}}
				<input type="text" class="form-control" placeholder="{{this.id}} {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div>
	<div>
		<div class="inputBox">
		<form action="/burgers/create" method="POST">
			<input type="text" name="burger_name" class="form_control" value="" id="enter_text">
			<button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
			
		</form>
			
		</div>
	</div>
</div>